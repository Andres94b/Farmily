<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_traking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrackingActivity">

    <TextView
        android:id="@+id/InventoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Inventory Page"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/buttonInventory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Inventory"
        android:backgroundTint="@color/barkBrown"
        android:textColor="@color/sunriseBlue"
        app:layout_constraintTop_toBottomOf="@id/InventoryTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/buttonSalesHistory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sales History"
        android:backgroundTint="@color/barkBrown"
        android:textColor="@color/sunriseBlue"
        app:layout_constraintTop_toBottomOf="@id/buttonInventory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/buttonGoToListingActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go To Listing Activity"
        app:layout_constraintTop_toBottomOf="@+id/InventoryTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:backgroundTint="@color/barkBrown"
        android:textColor="@color/sunriseBlue"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
