<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sunriseBlue"
    tools:context=".LoginActivity">

    <!-- Background Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <!-- FARMILY Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/farmily"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/barkBrown"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true" />

    <!-- Login Form -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:padding="24dp"
            android:backgroundTint="@color/barkBrown">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/sunriseBlue"
                    android:gravity="center"
                    android:layout_margin="16dp" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:padding="12dp"
                    android:background="@drawable/edittext_bg"
                    android:backgroundTint="@color/sunriseBlue"
                    android:textColor="@color/black"
                    android:layout_margin="8dp"
                    android:textSize="20sp"/>

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:background="@drawable/edittext_bg"
                    android:backgroundTint="@color/sunriseBlue"
                    android:textColor="@color/black"
                    android:layout_margin="8dp"
                    android:textSize="20sp"/>

                <!-- Spinner Dropdown for Role Selection -->
                <Spinner
                    android:id="@+id/roleSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bg"
                    android:layout_margin="12dp"
                    android:backgroundTint="@color/sunriseBlue"
                    />

                <Button
                    android:id="@+id/loginButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/login"
                    android:textColor="@color/white"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:padding="12dp"
                    android:backgroundTint="@color/darkSageGreen"
                    android:textSize="18sp"
                    />
                <Button
                    android:id="@+id/registerButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/register"
                    android:textColor="@color/white"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="16dp"
                    android:padding="12dp"
                    android:backgroundTint="@color/darkSageGreen"
                    android:textSize="18sp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>
